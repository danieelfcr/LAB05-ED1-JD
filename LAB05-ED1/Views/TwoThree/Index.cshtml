@model IEnumerable<ClassLibrary.Vehicle>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@{
    if (ViewBag.File == null)
    {
        <form asp-controller="TwoThree" asp-action="Index" method="post" enctype="multipart/form-data">
            <input type="file" name="File" accept=".CSV" /> <br /> <br />
            <input class="btn-info text-white" type="submit" value="vehicle list" />
        </form>
        <br />
        <br />
    }
}

<form asp-controller="TwoThree" asp-action="Search" method="post" enctype="multipart/form-data">
    <input type="text" name="Search"/> <br /> <br />
    <input class="btn-info text-white" type="submit" value="Search vehicle" />
</form>
<br />
<br />

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LicensePlate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Owner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Latitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Longitude)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            if (Model != null)
            {



                @foreach (var item in Model)
                {
                    if (item != null)
                    {
                        <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.LicensePlate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Color)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Owner)
                         </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Latitude)
                        </td>
                        <td>
                             @Html.DisplayFor(modelItem => item.Longitude)
                        </td>
                        <td>
                             @Html.ActionLink("Edit", "Edit", new { id = item.LicensePlate }) |
                             @Html.ActionLink("Details", "Details", new { id = item.LicensePlate }) |
                             @Html.ActionLink("Delete", "Delete", new { id = item.LicensePlate })
                        </td>
                        </tr>
                    }
                    
                }

            }
        }
    </tbody>
</table>
